<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->

 <!-- Main Content -->
 <main class="container">
    <div class="jumbotron">
      <h1 class="display-4">Welcome to the <%= title %> page</h1>
        <form style="text-align: start;" id="form" action="/book-list/add" method="POST">
        <div class="col-md-12 mb-3">
          <label for="nameText" class="form-label">Name</label>
          <input type="text" class="form-control" value="" name="name" id="nameText" placeholder="Name of Book" required>
        </div>
        <div class="col-md-12 mb-3">
          <label for="author" class="form-label">Author</label>
          <input type="text" class="form-control" value="" name="author" id="author" placeholder="Author Name" required>
        </div>
        <div class="col-md-12 mb-3">
          <label for="published" class="form-label">Published</label>
          <input type="number" class="form-control" value="" name="published" id="published" placeholder="Year of publishing" required>
        </div>
        <div class="col-md-12 mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" value="" name="description" id="description" required></textarea>
          </div>    
          <div class="col-md-12 mb-3">
            <label for="price" class="form-label">Price ($)</label>
            <input type="number" class="form-control" value="" name="price" id="published" placeholder="Price" step=".01" required>
          </div>
        <div class="row">
          <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> Add Book</button>
          </div>
        </div>
        </form>
    </div>
  </main>


